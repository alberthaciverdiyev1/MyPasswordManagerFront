<%- include('../layouts/header') %>
<%- include('../layouts/navbar') %>
<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="col-span-2">
            <div class="add-note-container mt-8 mb-4">
                <input type="text" class="add-note-input px-4 py-2 border border-gray-300 rounded-md mr-2 focus:outline-none focus:border-blue-500"
                    placeholder="Not ekleyin...">
                <button class="add-note-button px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Not Ekle</button>
            </div>
            <div class="notes-container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <div class="note bg-white rounded-lg shadow-md p-4">
                    <div class="note-header flex justify-between items-center mb-4">
                        <h2 class="note-title text-lg font-semibold">Alışveriş Listesi</h2>
                        <button class="delete-btn text-red-500 hover:text-red-700">&times;</button>
                        <button class="pin-btn">&#128204;</button>
                    </div>
                    <p class="note-content">- Süt</p>
                    <p class="note-content">- Ekmek</p>
                    <p class="note-content">- Yumurta</p>
                </div>
                <div class="note bg-white rounded-lg shadow-md p-4">
                    <div class="note-header flex justify-between items-center mb-4">
                        <h2 class="note-title text-lg font-semibold">Toplantı Notları</h2>
                        <button class="delete-btn text-red-500 hover:text-red-700">&times;</button>
                        <button class="pin-btn">&#128204;</button>
                    </div>
                    <p class="note-content">- Proje zaman çizelgesini tartış</p>
                    <p class="note-content">- Görevleri ata</p>
                    <p class="note-content">- Sonraki toplantı tarihini belirle</p>
                </div>
                <!-- Daha fazla not ekleyin -->
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
