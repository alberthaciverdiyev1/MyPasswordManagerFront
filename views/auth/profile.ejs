<%- include('../layouts/header') %>
<%- include('../layouts/navbar') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-lg">
        <div class="md:flex">
            <div class="w-full px-4 py-6">
                <div class="text-center mb-6">
                    <h2 class="text-2xl font-semibold text-gray-800">My Profile</h2>
                </div>
                <div class="mb-4">
                    <label for="username" class="block text-gray-700 font-semibold mb-2">Email</label>
                    <div class="relative">
                        <input type="text" id="username" name="username" disabled class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Email">
                        <button class="absolute right-0 top-0 mt-2 mr-2">Edit</button>
                    </div>
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
                    <div class="relative">
                        <input type="password" id="password" name="password" disabled class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Password">
                        <button class="absolute right-0 top-0 mt-2 mr-2">Edit</button>
                    </div>
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-semibold mb-2">Confirm Password</label>
                    <div class="relative">
                        <input type="password" id="confirm_password" name="confirm_password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Confirm Password">
                        <button class="absolute right-0 top-0 mt-2 mr-2">Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
